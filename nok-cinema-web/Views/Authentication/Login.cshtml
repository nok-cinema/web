@using nok_cinema_web.Models
@model PERSON
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="~/Content/CSS/defaultlogin.css">
    <link rel="stylesheet" type="text/css" href="~/Content/CSS/login.css">
    <link rel="stylesheet" href="http://www.w3schools.com/lib/w3.css">
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="@Url.Content("~/Scripts/bootstrap.css")" />
    <script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-3.1.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.maskedinput.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqBootstrapValidation.js")" type="text/javascript"></script>
    <link rel="stylesheet" href="@Url.Content("~/Scripts/bootstrap-iso.css")" />
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
</head>
<body>
    <div>
        <div class="header">
            <div class="menu">
                <a href="@Url.Action("Index", "Home")">
                    <div class="top1"><img src="~/Content/Images/logo1.png"> NOK CINEMA</div>
                </a>
                <a href="@Url.Action("Index", "Home")">
                    <div class="top2">Home</div>
                </a>
                <a href="@Url.Action("SelectMovie", "Movies")">
                    <div class="top2">ShowTime</div>
                </a>
                <a href="@Url.Action("MovieDetail", "Movies")">
                    <div class="top2">Movies</div>
                </a>
                <a href="@Url.Action("Index", "Home")">
                    <div class="top2">Food & Drink</div>
                </a>
                <a href="@Url.Action("Login", "Authentication")">
                    <div class="top3">Login</div>
                </a>
                <a href="@Url.Action("Register", "Authentication")">
                    <div class="top3">Register</div>
                </a>
            </div>
        </div>
        <div class="body">
            <div class="greyspace"></div>
            <div class="back">
                <div class="header2"><img src="~/Content/Images/logo26.png"> Login</div>
                <div class="boxbg">
                        @using (Html.BeginForm("DoLogin", "Authentication", FormMethod.Post))
            {
                           
                            <div class="form-horizontal">
                                <div class="body">
                                    <div class="bootstrap-iso">
                                        <div class="container">
                                            <div class="row clearfix">
                                                <div class="col-md-12 column">
                                                    <form class="form-horizontal" method="post">
                                                        <div class="control-group">
                                                            <div class="control-label col-md-7">
                                                            <div class="col-md-11">
                                                                @Html.ValidationMessage("CredentialError", new { @style = "color:red" })
                                                            </div>
                                                                </div>
                                                            <br />
                                                            <br />
                                                        </div>
                                                            <div class="control-group ">
                                                                <label class="control-label col-md-4" for="USERNAME">
                                                                    USERNAME
                                                                </label>
                                                                <div class="col-md-3">
                                                                    <input class="form-control text-box single-line" id="USERNAME" name="USERNAME" type="text" value="" required>
                                                                    <p class="help-block"></p>
                                                                    <br />
                                                                </div>
                                                            </div>

                                                            <div class="control-group ">
                                                                <label class="control-label col-md-4" for="USERNAME">
                                                                    PASSWORD
                                                                </label>
                                                                <div class="col-md-3">
                                                                    <input class="form-control text-box single-line" id="PASSWORD" name="PASSWORD" type="password" value="" required>
                                                                    <p class="help-block"></p>
                                                                    <br />
                                                                </div>
                                                            </div>
                                                            <div class="form-group">
                                                                <div class="control-label col-md-6">
                                                                    <input type="submit" value="Login" class="btn btn-default" name="BtnSubmit" />
                                                                </div>
                                                            </div>
</form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="darkgreyspace"></div>
            </div>
        </div>
        <div class="content3">
            <div class="deep">
                <div class="copyr"><img src="~/Content/Images/logo3.png"> <img src="~/Content/Images/logo4.png"> <img src="~/Content/Images/logo5.png"> 02-222-2222 Copyright<img src="~/Content/Images/logo6.png"> 2016 By NOKCINEMA</div>
            </div>
        </div>
</body>
</html>


