@model nok_cinema_web.Models.PERSON

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Profile</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="~/Content/CSS/defaultmember.css">
    <link rel="stylesheet" type="text/css" href="~/Content/CSS/profile.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/CSS/w3.css")">
    <link rel="stylesheet" href="@Url.Content("~/Scripts/bootstrap.css")" />
    <script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-3.1.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.maskedinput.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqBootstrapValidation.js")" type="text/javascript"></script>
    <link rel="stylesheet" href="@Url.Content("~/Scripts/bootstrap-iso.css")" />
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <div>
        <div class="header">
            <div class="menu">
                <a href="@Url.Action("Index", "Home")">
                    <div class="top1"><img src="~/Content/Images/logo1.png"> NOK CINEMA</div>
                </a>
                <a href="@Url.Action("Index", "Home")">
                    <div class="top2">Home</div>
                </a>
                <a href="@Url.Action("SelectMovie", "Movies")">
                    <div class="top2">ShowTime</div>
                </a>
                <a href="@Url.Action("MovieDetail", "Movies")">
                    <div class="top2">Movies</div>
                </a>
                <a href="@Url.Action("Index", "Home")">
                    <div class="top2">Food & Drink</div>
                </a>
                <div class="content1">
                    <div class="dropdown">
                        <button class="dropbtn">Management</button>
                        <div class="dropdown-content">
                            <a>Profile</a>
                            <a>Setting</a>
                            @Html.ActionLink("Logout", "Logout", "Authentication")
                        </div>
                    </div>                   
                    <div class="type3">Welcome, @Model.USERNAME <img src="~/Content/Images/logo2.png"></div>
                </div>
            </div>
        </div>
        <div class="body">
            <div class="greyspace"></div>
            <div class="back">
                <div class="header2"><img src="/Content/Images/logo25.png"> Profile</div>
                <div class="boxbg">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <script>
                                $(function () { $("input,select,textarea").not("[type=submit]").jqBootstrapValidation(); });
                            </script>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.CITIZENID)
                            @Html.HiddenFor(model => model.EMAIL)
                            @Html.HiddenFor(model => model.USERNAME)
                            @Html.HiddenFor(model => model.GENDER)
                            @Html.HiddenFor(model => model.BIRTHDATE)
                            <div class="body">
                                <div class="bootstrap-iso">
                                    <div class="container">
                                        <div class="row clearfix">
                                            <div class="col-md-12 column">
                                                <form class="form-horizontal" method="post">
                                                    <div class="control-group">
                                                        <label class="control-label col-md-4" for="FNAME">
                                                            FNAME
                                                        </label>
                                                        <div class="col-md-4">
                                                            @Html.EditorFor(model => model.FNAME, new { htmlAttributes = new { @class = "form-control", @maxlenght = "35", @required = "required" } })
                                                            @Html.ValidationMessageFor(model => model.FNAME, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="control-group">
                                                        <label class="control-label col-md-4" for="LNAME">
                                                            LNAME
                                                        </label>
                                                        <div class="col-md-4">
                                                            @Html.EditorFor(model => model.LNAME, new { htmlAttributes = new { @class = "form-control", @maxlenght = "35", @required = "required" } })
                                                            @Html.ValidationMessageFor(model => model.LNAME, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                    <div class="control-group" id="div_radio">
                                                        <label class="control-label col-md-4" for="GENDER">
                                                            GENDER
                                                        </label>
                                                        <div class="col-md-4">
                                                            @if (Model.GENDER == "M")
                                                            {
                                                                <label class="radio-inline">
                                                                    <input name="GENDER" type="radio" value="M" readonly disabled checked />
                                                                    MALE
                                                                </label>
                                                                <label class="radio-inline">
                                                                    <input name="GENDER" type="radio" value="F" readonly disabled />
                                                                    FEMALE
                                                                </label>
                                                            }
                                                            else
                                                            {<label class="radio-inline">
                                                                <input name="GENDER" type="radio" value="M" readonly disabled />
                                                                MALE
                                                            </label>
                                                            <label class="radio-inline">
                                                                <input name="GENDER" type="radio" value="F" readonly disabled checked />
                                                                FEMALE
                                                            </label>
                                                            }
                                                        </div>
                                                    </div>

                                                    <div class="control-group ">
                                                        <label class="control-label col-md-4" for="BIRTHDATE">
                                                            BIRTHDATE
                                                        </label>
                                                        <div class="col-md-4">
                                                            @Html.TextBoxFor(m => m.BIRTHDATE, new { @class = "form-control text-box single-line", @disabled = "disabled" })
                                                        </div>
                                                    </div>

                                                    <div class="control-group">
                                                        <label class="control-label col-md-4" for="ADDRESS">
                                                            ADDRESS
                                                        </label>
                                                        <div class="col-md-4">
                                                            @Html.EditorFor(model => model.ADDRESS, new { htmlAttributes = new { @class = "form-control", @maxlenght = "95" } })
                                                            @Html.ValidationMessageFor(model => model.ADDRESS, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                    <div class="control-group">
                                                        <label class="control-label col-md-4" for="EMAIL">
                                                            EMAIL
                                                        </label>
                                                        <div class="col-md-4">
                                                            @Html.TextBoxFor(m => m.EMAIL, new { @class = "form-control text-box single-line", @disabled = "disabled" })
                                                        </div>
                                                    </div>

                                                    <div class="control-group">
                                                        <label class="control-label col-md-4" for="USERNAME">
                                                            USERNAME
                                                        </label>
                                                        <div class="col-md-4">
                                                            @Html.TextBoxFor(m => m.USERNAME, new { @class = "form-control text-box single-line", @disabled = "disabled" })
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <label class="control-label col-md-4" for="PASSWORD">
                                                            CURRENT PASSWORD
                                                        </label>
                                                        <div class="col-md-4">
                                                            @Html.PasswordFor(model => model.PASSWORD, new { @class = "form-control text-box single-line", @maxlenght = "20", @required = "required" })
                                                            @Html.ValidationMessageFor(model => model.PASSWORD, "", new { @class = "text-danger" })
                                                        </div>
                                                        <br />
                                                        <br />
                                                    </div>
                                                    <div class="control-group">
                                                        <label class="control-label col-md-4" for="newpassword">
                                                            PASSWORD
                                                        </label>
                                                        <div class="col-md-4">
                                                            <input class="form-control text-box single-line" id="newpassword" name="newpassword" type="password" value="" required maxlength="20">
                                                        </div>
                                                    </div>

                                                    <div class="control-group ">
                                                        <label class="control-label col-md-4" for="PASSWORDAGAIN">
                                                            CONFIRM PASSWORD
                                                        </label>
                                                        <div class="col-md-4">
                                                            <input class="form-control text-box single-line" type="password" data-validation-match-match="newpassword" name="NEWPASSWORD" data-validation-match-message="The password and its confirm are not the same" required maxlength="20" />
                                                            <p class="help-block"></p>
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <div class="control-label col-md-6">
                                                            <input type="submit" value="Confirm" class="btn btn-default" />
                                                        </div>
                                                        <br />
                                                        <br />
                                                    </div>
                                                    <div class="form-group">
                                                        <div class="control-label col-md-6">
                                                            @Html.ActionLink("Back to List", "Index")
                                                            </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="boxbg"></div>
                        </div>


                    }
                </div>
            </div>
        </div>
    </div>
    <div class="content3">
        <div class="deep">
            <div class="copyr"><img src="~/Content/Images/logo3.png"> <img src="/Content/Images/logo4.png"> <img src="/Content/Images/logo5.png"> 02-222-2222 Copyright<img src="/Content/Images/logo6.png"> 2016 By NOKCINEMA</div>
        </div>
    </div>
</body>

</html>