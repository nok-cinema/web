                selectingSeats.seatNumbers.push(x[i].innerHTML.substr(1));
                selectingSeats.text += (selectingSeats.seatRows[i] + selectingSeats.seatNumbers[i] + ", ");
            }
            alert(selectingSeats.text);
            //alert(str.join(','));

            $.ajax({
                url: "@Url.Action("ProcessData", "Booking")",
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify({ selectedSeatList: selectingSeats }),
                //success: function(response) {
                complete: function(result) {
                    if (result.responseText == 'pending') {
                        //$('body').html(result.responseText);
                        //window.location.href = result.responseText;
                        setTimeout(function () { ajaxRequest(); }, 5000);   
                    }
                    else {
                        window.location = '@Url.Action("Index", "Movies")';
                    }
                    //response ? alert("It worked!") : alert("It didn't work.");
            }
        }   );
        });


    var price = 10; //price
    var firstSeatLabel = 1;
    $(document).ready(function() {
        var $cart = $('#selected-seats'), //Sitting Area
            $counter = $('#counter'), //Votes
            $total = $('#total'); //Total money

        var sc = $('#seat-map').seatCharts({
            map: @Html.Raw(Json.Encode(Model.SeatArray)),
            //[Seating chart
            //'aaaaaaaaaa',
            //'aaaaaaaaaa',
            //'__________',
            //'aaaaaaaa__',
            //'aaaaaaaaaa',
            //'aaaaaaaaaa',
            //'aaaaaaaaaa',
            //'aaaaaaaaaa',
            //'aaaaaaaaaa',
            //'aa__aa__aa'],
            seats: {
                N: {
                    price: 80,
                    classes: 'normal-class', //CSS class
                    category: 'Normal Class',
                },
                S: {
                    price: 120,
                    classes: 'sofa-class',
                    category: 'Sofa Class'
                }
            },
            naming: {
                top: false,
                getLabel: function(character, row, column) {
                    if (firstSeatLabel == 21) firstSeatLabel = 1;
                    return firstSeatLabel++;
                    //return column;
                }
            },
            legend: { //Definition legend
                node: $('#legend'),
                items: [
                    //['a', 'available', 'Option'],
                    //['a', 'unavailable', 'Sold']
                    ['N', 'available', 'Normal'],
                    ['S', 'avaiable', 'Sofa'],
                    ['N', 'unavailable', 'Already Booked']
                ]
            },
            click: function() { //Click event
                if (this.status() == 'available') { //optional seat
                    //$('<li>R' + (this.settings.row + 1) + ' S' + this.settings.label + '</li>')
                    //    .attr('id', 'cart-item-' + this.settings.id)
                    //    .data('seatId', this.settings.id)
                    //    .appendTo($cart);
                    $('<li>' + 
                            this.data().category + 
                            ' Seat # '+'<span name="seatText">'+this.settings.id.substr(0, 1)+this.settings.label+'</span>'+': <b>$' + 
                            this.data().price + 
                            '</b> <a href="#" class="cancel-cart-item">[cancel]</a></li>')
                        .attr('id', 'cart-item-'+this.settings.id)
                        .data('seatId', this.settings.id)
                        .appendTo($cart);


                    $counter.text(sc.find('selected').length + 1);
                    //$total.text(recalculateTotal(sc) + price);
                    $total.text(recalculateTotal(sc)+this.data().price);

                    return 'selected';
                } else if (this.status() == 'selected') { //Checked
                    //Update Number
                    $counter.text(sc.find('selected').length - 1);
                    //update totalnum
                    //$total.text(recalculateTotal(sc) - price);
                    $total.text(recalculateTotal(sc) - this.data().price);

                    //Delete reservation
                    $('#cart-item-' + this.settings.id).remove();
                    //optional
                    return 'available';
                } else if (this.status() == 'unavailable') { //sold
                    return 'unavailable';
                } else {
                    return this.style();
                }
            }
        });
        //this will handle "[cancel]" link clicks
        $('#selected-seats').on('click', '.cancel-cart-item', function () {
            //let's just trigger Click event on the appropriate seat, so we don't have to repeat the logic here
            sc.get($(this).parents('li:first').data('seatId')).click();
        });

        //sold seat
        sc.get(@Html.Raw(Json.Encode(Model.UnavailableSeatArray))).status('unavailable');
        //sc.get(['1_2', '4_4', '4_5', '6_6', '6_7', '8_5', '8_6', '8_7', '8_8', '10_1', '10_2'])
        //    .status('unavailable');

    });

    //sum total money
    function recalculateTotal(sc) {
        var total = 0;
        sc.find('selected').each(function() {
            //total += price;
            total += this.data().price;
        });
        return total;
    }

</script>
</body>
