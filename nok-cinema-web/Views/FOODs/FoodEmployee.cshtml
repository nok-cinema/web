@using nok_cinema_web.ViewModels
@model FoodListViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<!DOCTYPE html>
<html>
<head>
    <title>Food & Drink</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="~/Content/CSS/empfood.css">
    <link rel="stylesheet" type="text/css" href="~/Content/CSS/defaultemployee.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/CSS/w3.css")">
</head>
<body>
    <div>
        <div class="header">
            <div class="menu">
                @using (Html.BeginForm("Index", "Home"))
                {<button class="top1" type="submit"><img src="~/Content/Images/logo15.png"> NOK CINEMA</button>}
                @using (Html.BeginForm("Index", "Home"))
                {<button class="top2" type="submit">Home</button>}
                @using (Html.BeginForm("SelectMovie", "Movies"))
                {<button class="top2" type="submit">ShowTime</button>}
                @using (Html.BeginForm("Movie", "Movies"))
                {<button class="top2" type="submit">Movies</button>}
                @using (Html.BeginForm("Food", "FOODs"))
                {<button class="top2" type="submit">Food & Drink</button>}
                <div class="content1">
                    <div class="dropdown">
                        <button class="dropbtn">Management</button>
                        <div class="dropdown-content">
                            @Html.ActionLink("Profile", "Edit", "People")
                            <a>Setting</a>
                            @Html.ActionLink("Logout", "Logout", "Authentication")
                        </div>
                    </div>

                </div>
                <div class="top3">
                    @{ EmployeeUserProfile user = (EmployeeUserProfile)TempData["UserProfileData"];}
                    <div class="type3">
                        Welcome, @user.USERNAME <img src="~/Content/Images/logo2.png">
                    </div>
                </div>
            </div>
        </div>
        <div class="body">
            <div class="bluespace"></div>
            <div class="back">
                <div class="header2"><img src="logo21.png"> Food & Drink</div>
                <div class="box2">
                    <div class="bot1">
                        <div class="bot11">
                            <img src="~/Content/Images/popcorn.png">
                        </div>
                        <div class="bot12"><img src="~/Content/Images/coke.png"></div>
                    </div>
                    <div class="bot2">

                        @using (Html.BeginForm("CalculateFood", "FOODs", FormMethod.Post))
                        {
                            <table>
                                <input type="hidden" name="employeename" id="employeename" value="@user.USERNAME" />
                                @foreach (var item in Model.FOODS)
                                {
                                <tr>
                                    <td><div class="bot21">@item.Name</div></td>
                                    <td><div class="bot22">- Price: ฿@item.Price</div></td>
                                    <td><input type="number" name="food_@item.FoodID" id="food_@item.FoodID" value="0" size="3"></td>
                                </tr>
                                }
                            </table>
                            <br />
                                <input type="submit" value="BUY" id="checkout-button" class="submit" style="text-align: center" />
                        }

                    </div>
                </div>
                <div class="yellowspace"></div>
            </div>
        </div>
        <div class="content3">
            <div class="deep">
                <div class="copyr"><img src="logo3.png"> <img src="logo4.png"> <img src="logo5.png"> 02-222-2222 Copyright<img src="logo6.png"> 2016 By NOKCINEMA</div>
            </div>
        </div>
    </div>
</body>
</html>