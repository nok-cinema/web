@using nok_cinema_web.Models
@model PERSON
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap.min.css")">
    <link rel="stylesheet" type="text/css" href="~/Content/CSS/login.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/CSS/w3.css")">
    <meta name="viewport" content="width=device-width" />    
    <link rel="stylesheet" href="@Url.Content("~/Scripts/bootstrap.css")" />
    <script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-3.1.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.maskedinput.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqBootstrapValidation.js")" type="text/javascript"></script>
    <link rel="stylesheet" href="@Url.Content("~/Scripts/bootstrap-iso.css")" />
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
</head>
<body>
    <div>
        <div class="header">
            <div class="menu">
                @using (Html.BeginForm("Index", "Home"))
                {<button class="top1" type="submit"><img src="~/Content/Images/logo1.png"> NOK CINEMA</button>}
                @using (Html.BeginForm("Index", "Home"))
                {<button class="top2" type="submit">Home</button>}
                @using (Html.BeginForm("Index", "Home"))
                {<button class="top2" type="submit">ShowTime</button>}
                @using (Html.BeginForm("Movie", "Movies"))
                {<button class="top2" type="submit">Movies</button>}
                @using (Html.BeginForm("Index", "Home"))
                {<button class="top2" type="submit">Food & Drink</button>}
                @using (Html.BeginForm("Login", "Authentication"))
                {<button class="top3" type="submit">Login</button>}
                @using (Html.BeginForm("Register", "Authentication"))
                {<button class="top3" type="submit">Register</button>}
            </div>
        </div>
        <div class="body">
            <div class="greyspace"></div>
            <div class="back">
                <div class="header2"><img src="~/Content/Images/logo26.png"> Login</div>
                <div class="boxbg">
                    <div @*class="box2"*@>
                        <br /><br />
                       @using (Html.BeginForm("DoLogin", "Authentication", FormMethod.Post))
            {
                        <style>
                            .bootstrap-iso .formden_header h2, .bootstrap-iso .formden_header p, .bootstrap-iso form {
                                font-family: Arial, Helvetica, sans-serif;
                                color: black;
                            }

                                .bootstrap-iso form button, .bootstrap-iso form button:hover {
                                    color: white !important;
                                }

                            .asteriskField {
                                color: red;
                            }
                        </style>
                        <div class="form-horizontal">
                            <div class="body">
                                <div class="bootstrap-iso">
                                    <div class="container-fluid">
                                        <div class="row">
                                            <div class="col-md-6 col-md-6 col-xs-12">
                                                <form class="form-horizontal" method="post">
                                                    <div class="control-group">
                                                        <div class="control-label col-md-12 col-md-11">
                                                            @Html.ValidationMessage("CredentialError", new { @style = "color:red" })
                                                        </div>
                                                    </div>
                                                    <div class="control-group ">
                                                        <label class="control-label col-md-6" for="USERNAME">
                                                            USERNAME
                                                        </label>
                                                        <div class="col-md-6">
                                                            <input class="form-control text-box single-line" id="USERNAME" name="USERNAME" type="text" value="" required>
                                                            <p class="help-block"></p>
                                                            <br />
                                                        </div>
                                                    </div>

                                                    <div class="control-group ">
                                                        <label class="control-label col-md-6" for="USERNAME">
                                                            PASSWORD
                                                        </label>
                                                        <div class="col-md-6">
                                                            <input class="form-control text-box single-line" id="PASSWORD" name="PASSWORD" type="password" value="" required>
                                                            <br />
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <div class="control-label col-md-12 col-md-10">
                                                            <input type="submit" value="Login" class="btn btn-default" name="BtnSubmit" />
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                       }
                    </div>
                </div>
                <div class="darkgreyspace"></div>
            </div>
        </div>
        <div class="content3">
            <div class="deep">
                <div class="copyr"><img src="~/Content/Images/logo3.png"> <img src="~/Content/Images/logo4.png"> <img src="~/Content/Images/logo5.png"> 02-222-2222 Copyright<img src="~/Content/Images/logo6.png"> 2016 By NOKCINEMA</div>
            </div>
        </div>
    </div>
</body>
</html>


