@using nok_cinema_web.Models
@model PERSON
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="@Url.Content("~/Scripts/bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Scripts/bootstrap-iso.css")" /> 
    <script src="@Url.Content("~/Scripts/jquery-3.1.1.min.js")" type="text/javascript"></script>
</head>

<body>
@Html.ValidationMessage("CredentialError", new { style = "color:red;" })
@using (Html.BeginForm("DoLogin", "Authentication", FormMethod.Post))
{
    <div class="bootstrap-iso">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <form class="form-horizontal" method="post">
                        <div class="form-group ">
                            <label class="control-label col-sm-2" for="USERNAME">
                                USERNAME
                            </label>
                            <div class="col-sm-10">
                                <input class="form-control text-box single-line" id="USERNAME" name="USERNAME" type="text" value="">
                                <br />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label class="control-label col-sm-2" for="USERNAME">
                                PASSWORD
                            </label>
                            <div class="col-sm-10">

                                <input class="form-control text-box single-line" id="PASSWORD" name="PASSWORD" type="text" value="">
                                <br />


                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                            
                                <input type="submit" value="Login" class="btn btn-default"  name="BtnSubmit" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
</body>

</html>
