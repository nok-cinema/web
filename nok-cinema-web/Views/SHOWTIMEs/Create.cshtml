@model nok_cinema_web.Models.SHOWTIME

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Register</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="@Url.Content("~/Content/CSS/registerstyle.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/CSS/defaultlogin.css")" />
    <link rel="stylesheet" href="http://www.w3schools.com/lib/w3.css">
    <link rel="stylesheet" href="@Url.Content("~/Scripts/bootstrap.css")" />
    <script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-3.1.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.maskedinput.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqBootstrapValidation.js")" type="text/javascript"></script>
    <link rel="stylesheet" href="@Url.Content("~/Scripts/bootstrap-iso.css")" />
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="body">
                <div class="bootstrap-iso">
                    <div class="container">
                        <div class="row clearfix">
                            <div class="col-md-12 column">
                                <form class="form-horizontal" method="post">
                                    <div class="control-group ">
                                        <label class="control-label col-md-4" for="SHOWDATE">
                                            SHOWDATE
                                        </label>
                                        <div class="col-md-4">
                                            <input class="form-control text-box single-line" type="text" name="SHOWDATE" required maxlength="20" />
                                           
                                        </div>
                                    </div>
                                    <div class="control-group ">
                                        <label class="control-label col-md-4" for="TIME">
                                            TIME
                                        </label>
                                        <div class="col-md-4">
                                            <select name="time" id="time" required>
                                                <option value="11:00:00">11:00</option>
                                                <option value="13:30:00">13:30</option>
                                                <option value="16:00:00">16:00</option>
                                                <option value="19:00:00">19:00</option>
                                                <option value="20:00:00">20:00</option>
                                                <option value="21:30:00">21:30</option>
                                                <option value="23:00:00">23:00</option>
                                            </select>
                                        </div>
                                    </div>
                                        <div class="control-group ">
                                            <label class="control-label col-md-4" for="MOVIEID">
                                                MOVIEID
                                            </label>
                                            <div class="col-md-4">
                                                @Html.DropDownList("MOVIEID", null, htmlAttributes: new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="control-group ">
                                            <label class="control-label col-md-4" for="THEATREID">
                                                THEATREID
                                            </label>
                                            <div class="col-md-4">
                                                @Html.DropDownList("THEATREID", null, htmlAttributes: new { @class = "form-control" })
                                                <br />
                                                <br />
                                            </div>
                                        </div>
                                            <div class="form-group">
                                                <div class="control-label col-md-6">
                                                    <input type="submit" value="Create" class="btn btn-default" />
                                                </div>
                                                <br />
                                                <br />
                                            </div>
                                    <div class="form-group">
                                        <div class="control-label col-md-6">
                                            @Html.ActionLink("Back to List", "Index")
                                        </div>
                                    </div>
</form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="boxbg"></div>
        </div>
         <!-- Include Date Range Picker -->
        <script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap-datepicker.min.js")"></script>
                        <link rel="stylesheet" href="@Url.Content("~/Scripts/bootstrap-datepicker3.css")" />

                            <script>
                                $(document).ready(function () {
                                    var date_input = $('input[name="SHOWDATE"]'); //our date input has the name "date"
                                    var container = $('.bootstrap-iso form').length > 0 ? $('.bootstrap-iso form').parent() : "body";
                                    date_input.datepicker({
                                        format: 'dd/mm/yyyy',
                                        container: container,
                                        todayHighlight: true,
                                        autoclose: true,
                                    })
                                })
                            </script>
    }

    
</body>

</html>
