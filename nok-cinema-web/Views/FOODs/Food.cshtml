@using nok_cinema_web.ViewModels
@model FoodListViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Food & Drink</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/CSS/defaultlogin.css">
    <link rel="stylesheet" type="text/css" href="~/Content/CSS/cusfood.css">
    <link rel="stylesheet" href="http://www.w3schools.com/lib/w3.css">
</head>
<body>
    <div>
        <div class="header">
            <div class="menu">
                @using (Html.BeginForm("Index", "Home"))
                {<button class="top1" type="submit"><img src="~/Content/Images/logo1.png"> NOK CINEMA</button>}
                @using (Html.BeginForm("Index", "Home"))
                {<button class="top2" type="submit">Home</button>}
                @using (Html.BeginForm("SelectMovie", "Movies"))
                {<button class="top2" type="submit">ShowTime</button>}
                @using (Html.BeginForm("Movie", "Movies"))
                {<button class="top2" type="submit">Movies</button>}
                @using (Html.BeginForm("Food", "FOODs"))
                {<button class="top2" type="submit">Food & Drink</button>}
                @using (Html.BeginForm("Login", "Authentication"))
                {<button class="top3" type="submit">Login</button>}
                @using (Html.BeginForm("Register", "Authentication"))
                {<button class="top3" type="submit">Register</button>}
            </div>
        </div>
        <div class="body">
            <div class="greenspace"></div>
            <div class="back">
                <div class="greenspace"></div>
                <div class="header2"><img src="~/Content/Images/logo21.png"> Food & Drink</div>
                <div class="box2">
                    <div class="bot1">
                        <div class="bot11"><img src="~/Content/Images/popcorn.png"></div>
                        <div class="bot12"><img src="~/Content/Images/coke.png"></div>
                    </div>
                    <div class="bot2">
                        <ul>
                            @foreach (var item in Model.FOODS)
                            {
                                <div class="bot21">@item.Name</div>                                
                                <div class="bot22">- Price: @item.Price.ToString("C")</div>
                                <br />
                            }                           
                        </ul>
                    </div>
                </div>
                <div class="orangespace"></div>
            </div>
        </div>
        <div class="content3">
            <div class="deep">
                <div class="copyr"><img src="~/Content/Images/logo3.png"> <img src="~/Content/Images/logo4.png"> <img src="~/Content/Images/logo5.png"> 02-222-2222 Copyright<img src="~/Content/Images/logo6.png"> 2016 By NOKCINEMA</div>
            </div>
        </div>
    </div>
</body>
</html>