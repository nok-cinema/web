@using nok_cinema_web.ViewModels
@model nok_cinema_web.ViewModels.HistoryBookedShowtimeMovieIdViewModel
@{
	Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<title>ShowTime_page4</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="@Url.Content("~/Content/bootstrap.min.css")">
	<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/CSS/defaultmember.css")">
	<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/CSS/ticket.css")">
	<link rel="stylesheet" href="@Url.Content("~/Content/CSS/w3.css")">
	<script type="text/javascript" src="@Url.Content("~/Scripts/jquery-3.1.1.min.js")"></script>
</head>
<body>
	<div>
		<div class="header">
			<div class="menu">
				<div class="top1"><img src="@Url.Content("~/Content/Images/logo15.png")"> NOK CINEMA</div>
				<div class="top2">Home</div>
				<div class="top2">Food & Drink</div>
				<div class="content1">
					<div class="dropdown">
						<button class="dropbtn">Management</button>
						<div class="dropdown-content">
							<a>Profile</a>
							<a>Setting</a>
							<a>Logout</a>
						</div>
					</div>
					<div class="top3">Hello, Username <img src="@Url.Content("~/Content/Images/logo2.png")"></div>
				</div>
			</div>
		</div>
		<div class="body">
			<div class="bluespace"></div>
				<div class="back">
					<div class="bluespace"></div>
					<div class="header2"><img src="@Url.Content("~/Content/Images/logo8.png")"> History</div>
					<div class="box2">
						<div class="whitespace"></div>
						<h3><em>This is history booking of "@Model.MemberName"</em></h3>
						<table class="table">
						    <tr>
						        <th>
						            
						        </th>
						        <th>
						            <h1>Movie Name</h1>
						        </th>
						        <th>
						            <h1>Showtime</h1>
						        </th>
						        <th>
						            <h1>Link</h1>
						        </th>
						    </tr>
							@foreach (var item in Model.MovieShowtimeViewModels)
							{
							    <tr>
							        <td width="150px">
							            <a href='@Url.Action("MovieDetail", "Movies", new {id = item.MovieId})'>
							                <img src="@Url.Content(String.Format("~/Content/Movie/{0}.jpg", item.MovieId))" style="width: 100%"/>
							            </a>
							        </td>
							        <td>
							            @Html.ActionLink(item.MovieName, "MovieDetail", new {controller = "Movies", id = item.MovieId})
							        </td>
							        <td>
							            @Html.DisplayFor(modelItem => item.DateTime)
							        </td>
							        <td>
							            @Html.ActionLink("View tickets", "HistoryTicket", new {dateTime = item.Showtime.SHOWDATE, movieId = item.MovieId})
							        </td>
							    </tr>
							}
						</table>
					</div>
					<div class="yellowspace"></div>
				</div>
		</div>
	  <div class="content3">
	  <div class="deep">
		<div class="copyr"><img src="@Url.Content("~/Content/Images/logo3.png")"> <img src="@Url.Content("~/Content/Images/logo4.png")"> <img src="@Url.Content("~/Content/Images/logo5.png")"> 02-222-2222 Copyright<img src="@Url.Content("~/Content/Images/logo6.png")"> 2016 By NOKCINEMA</div>
	  </div>
	</div>
	</div>
</body>
</html>