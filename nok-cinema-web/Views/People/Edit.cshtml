@model nok_cinema_web.Models.PERSON

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="@Url.Content("~/Scripts/bootstrap.css")" />
    <script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-3.1.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.maskedinput.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqBootstrapValidation.js")" type="text/javascript"></script>
    <link rel="stylesheet" href="@Url.Content("~/Scripts/bootstrap-iso.css")" />
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>PERSON</h4>
            <hr />
            <style>
                .bootstrap-iso .formden_header h2, .bootstrap-iso .formden_header p, .bootstrap-iso form {
                    font-family: Arial, Helvetica, sans-serif;
                    color: black;
                }

                    .bootstrap-iso form button, .bootstrap-iso form button:hover {
                        color: white !important;
                    }

                .asteriskField {
                    color: red;
                }
            </style>
            <script>
                $(function () { $("input,select,textarea").not("[type=submit]").jqBootstrapValidation(); });
            </script>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.CITIZENID)
            @Html.HiddenFor(model => model.EMAIL)
            @Html.HiddenFor(model => model.USERNAME)
            @Html.HiddenFor(model => model.GENDER)
            @Html.HiddenFor(model => model.BIRTHDATE)
            <div class="body">
                <div class="bootstrap-iso">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-6 col-md-6 col-xs-12">
                                <form class="form-horizontal" method="post">
                                    <div class="control-group">
                                        <label class="control-label col-md-6" for="FNAME">
                                            FNAME
                                        </label>
                                        <div class="col-md-6">
                                            @Html.EditorFor(model => model.FNAME, new { htmlAttributes = new { @class = "form-control", @maxlenght = "35", @required = "required" } })
                                            @Html.ValidationMessageFor(model => model.FNAME, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label col-md-6" for="LNAME">
                                            LNAME
                                        </label>
                                        <div class="col-md-6">
                                            @Html.EditorFor(model => model.LNAME, new { htmlAttributes = new { @class = "form-control", @maxlenght = "35", @required = "required" } })
                                            @Html.ValidationMessageFor(model => model.LNAME, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group" id="div_radio">
                                        <label class="control-label col-md-6" for="GENDER">
                                            GENDER
                                        </label>
                                        <div class="col-md-6">
                                            <label class="radio-inline">
                                                <input name="GENDER" type="radio" value="M" readonly disabled />
                                                MALE
                                            </label>
                                            <label class="radio-inline">
                                                <input name="GENDER" type="radio" value="F" readonly disabled />
                                                FEMALE
                                            </label>
                                        </div>
                                    </div>
                                    &nbsp;

                                    <div class="control-group ">
                                        <label class="control-label col-md-6" for="BIRTHDATE">
                                            BIRTHDATE
                                        </label>
                                        <div class="col-md-6">
                                            @Html.TextBoxFor(m => m.BIRTHDATE, new { @class = "form-control text-box single-line", @disabled = "disabled" })
                                        </div>
                                    </div>

                                    <div class="control-group">
                                        <label class="control-label col-md-6" for="ADDRESS">
                                            ADDRESS
                                        </label>
                                        <div class="col-md-6">
                                            @Html.EditorFor(model => model.ADDRESS, new { htmlAttributes = new { @class = "form-control", @maxlenght = "95" } })
                                            @Html.ValidationMessageFor(model => model.ADDRESS, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="control-group">
                                        <label class="control-label col-md-6" for="EMAIL">
                                            EMAIL
                                        </label>
                                        <div class="col-md-6">
                                            @Html.TextBoxFor(m => m.EMAIL, new { @class = "form-control text-box single-line", @disabled = "disabled" })
                                        </div>
                                    </div>

                                    <div class="control-group">
                                        <label class="control-label col-md-6" for="USERNAME">
                                            USERNAME
                                        </label>
                                        <div class="col-md-6">
                                            @Html.TextBoxFor(m => m.USERNAME, new { @class = "form-control text-box single-line", @disabled = "disabled" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-6" for="PASSWORD">
                                            CURRENT PASSWORD
                                        </label>
                                        <div class="col-md-6">
                                            @Html.PasswordFor(model => model.PASSWORD, new { @class = "form-control text-box single-line", @maxlenght = "20", @required = "required" })
                                            @Html.ValidationMessageFor(model => model.PASSWORD, "", new { @class = "text-danger" })
                                        </div>
                                        <br />
                                        <br />
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label col-md-6" for="newpassword">
                                            PASSWORD
                                        </label>
                                        <div class="col-md-6">
                                            <input class="form-control text-box single-line" id="newpassword" name="newpassword" type="password" value="" required maxlength="20">
                                        </div>
                                    </div>

                                    <div class="control-group ">
                                        <label class="control-label col-md-6" for="PASSWORDAGAIN">
                                            CONFIRM PASSWORD
                                        </label>
                                        <div class="col-md-6">
                                            <input class="form-control text-box single-line" type="password" data-validation-match-match="newpassword" name="NEWPASSWORD" data-validation-match-message="The password and its confirm are not the same" required maxlength="20" />
                                            <p class="help-block"></p>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="control-label col-md-12 col-md-10">
                                            <input type="submit" value="Confirm" class="btn btn-default" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="boxbg"></div>
        </div>


    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>

</html>
